#parse("/velocity/layout.vm")
#@mainLayout()
    <h1>Run code</h1>
    <form method="post" action="/run-code">
        <select name="language">
            #foreach($language in $supportedLanguages)
                <option value="$language.name" #if($language.name == $selectedLanguage)selected#end>$language.displayName</option>
            #end
        </select>
        <br>
        <br>
        #if($codeInput)
            <textarea name="code">$codeInput</textarea>
        #else
            <textarea name="code"></textarea>
        #end
        <br>
        <button>Submit</button>
        <br>
        <br>
    </form>
    #if($codeOutput)
        <div id="output">$codeOutput</div>
    #else
        <div id="output">Waiting ...</div>
    #end
#end
