#parse("/velocity/layout.vm")
#@mainLayout()
    <h1>Run code</h1>
    <form method="post" action="/run-code">
        <select name="language">
            <option value="javascript" #if($language == "javascript")selected#end>JavaScript</option>
            <option value="python" #if($language == "python")selected#end>Python</option>
            <option value="groovy" #if($language == "groovy")selected#end>Groovy</option>
            <option value="ruby" #if($language == "ruby")selected#end>Ruby</option>
        </select>

        #if($codeInput)
            <textarea name="code">$codeInput</textarea>
        #else
            <textarea name="code"></textarea>
        #end
        <button>Submit</button>
    </form>
    #if($codeOutput)
        <div id="output">$codeOutput</div>
    #else
        <div id="output">Waiting ...</div>
    #end
#end
